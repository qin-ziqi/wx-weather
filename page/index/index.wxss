.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    font-size: 30rpx;
    color: #fff;
}

.bcg {
    position: fixed;
    z-index: -1;
    width: 100vw;
    height: 100vh;
}

.search {
    position: fixed;
    z-index: 2;
    top: 0;
    left: 0;
    width: 100vw;
    height: 90rpx;
}

.search .wrapper {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    height: 60rpx;
    margin: 15rpx 50rpx;
    padding: 0 15rpx;
    box-sizing: border-box;
    border: none;
    border-bottom: 1rpx solid #fff;
}

.search image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 20rpx;
}

.search input {
    flex: 1;
}

.placeholder-class {
    color: #fff;
}

.content {
    margin-top: 120rpx;
    padding: 0 50rpx;
}

.user {
    display: flex;
    align-items: center;
}

.user-image {
    overflow: hidden;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.user-name {
    padding: 0 20rpx;
    font-size: 30rpx;
}

.location {
    padding: 10rpx 0 50rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.city {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 50rpx;
}

.city-name {
    margin: 0 20rpx;
}

.icon-style {
    width: 30rpx;
    height: 30rpx;
}

.time {
    display: block;
    text-align: right;
    font-size: 24rpx;
}

.message {
    font-size: 24rpx;
}

.weather {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.weather-temperature {
    margin: 100rpx 0;
    font-size: 200rpx;
    font-weight: 300;
}

.weather-temperature text {
    margin-left: -40rpx;
    font-size: 50rpx;
}

.weather-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.weather-desc {
    font-size: 24rpx;
    margin: 20rpx;
    padding: 10rpx 20rpx;
    border-radius: 20rpx;
    background: rgba(240, 240, 240, 0.2);
}

.title-style {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 40rpx;
    height: 60rpx;
    background: rgba(0, 0, 0, 0.4);
    border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
    font-size: 30rpx;
}

.details {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    background: rgba(0, 0, 0, 0.4);
}

.detail {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 25%;
    font-size: 22rpx;
    line-height: 2em;
    height: 100rpx;
    box-sizing: border-box;
    border-right: 1px solid rgba(255, 255, 255, 0.5);
    border-bottom: 1px solid rgba(255, 255, 255, 0.5);
}

.detail:nth-child(4n) {
    border-right: 0px;
}

.detail:nth-child(n+9) {
    border-bottom: 0px;
}

.hourly-content {
    display: flex;
    overflow-x: scroll;
    background: rgba(0, 0, 0, 0.4);
}

.hourly-item {
    width: 100vw;
    padding: 25rpx 25rpx 0;
    flex-shrink: 0;
    box-sizing: border-box;
}

.hourly-item .details {
    background: rgba(107, 102, 102, 0.4);
}

.hourly-time{
	display: flex;
	justify-content: center;
	align-items: center;
	line-height: 2em;
	font-size: 22rpx;
}

.scroll-content {
    display: flex;
    flex-direction: row;
    width: 100vw;
    overflow-x: scroll;
    background: rgba(0, 0, 0, 0.4);
    font-size: 22rpx;
}

.daily-item {
    width: 33.33vw;
    height: 200rpx;
    flex-shrink: 0;
}

.scroll-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: rgba(107, 102, 102, 0.4);
    margin: 10rpx;
    padding: 10rpx;
    line-height: 1.5em;
}

.scroll-item  view {
    display: flex;
    align-items: center;
    justify-content: center;
}

.scroll-item  image {
    width: 40rpx;
    margin-left: 10rpx;
}
